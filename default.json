{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    "github>christfriedbalizou/renovate:autoMerge.json5",
    "github>christfriedbalizou/renovate:changelogs.json5",
    "github>christfriedbalizou/renovate:customManagers.json5",
    "github>christfriedbalizou/renovate:grafanaDashboards.json5",
    "github>christfriedbalizou/renovate:groups.json5",
    "github>christfriedbalizou/renovate:labels.json5",
    "github>christfriedbalizou/renovate:overrides.json5",
    "github>christfriedbalizou/renovate:semanticCommits.json5",
    ":automergeBranch",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/London)"
  ],
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": [
    "prEditedNotification",
